# SonarQube Environment Variables Example
# Copie este arquivo para sonar.env e ajuste conforme necessário

# Configurações do servidor web
SONAR_WEB_HOST=0.0.0.0
SONAR_WEB_PORT=9000
SONAR_WEB_CONTEXT=/

# Configurações de banco de dados (PostgreSQL)
SONAR_JDBC_URL=jdbc:postgresql://postgresql:5432/sonar
SONAR_JDBC_USERNAME=sonar
SONAR_JDBC_PASSWORD=sonar

# Configurações de memória Java
SONAR_WEB_JAVAOPTS=-Xmx512m -Xms128m
SONAR_CE_JAVAOPTS=-Xmx512m -Xms128m
SONAR_SEARCH_JAVAOPTS=-Xmx512m -Xms128m

# Configurações de segurança
SONAR_FORCE_AUTHENTICATION=false
SONAR_ALLOW_USERS_TO_SIGNUP=true

# Configurações de análise
SONAR_ANALYSIS_MODE=publish
SONAR_SCM_DISABLED=true

# Configurações de logs
SONAR_LOG_LEVEL=INFO
SONAR_LOG_ROLLING_POLICY=time:yyyy-MM-dd

# Configurações de performance
SONAR_CE_GRACEFUL_STOP_TIMEOUT=30000
SONAR_CE_WORKER_COUNT=1

# Configurações de plugins
SONAR_UPDATECENTER_ACTIVATE=true

# Configurações de componentes
SONAR_SEARCH_HOST=localhost
SONAR_SEARCH_PORT=9001
SONAR_CE_HOST=localhost
SONAR_CE_PORT=9002

# Configurações de Elasticsearch
SONAR_ES_BOOTSTRAP_CHECKS_DISABLE=true 