          "description": "Expected task completion date"
        },
        "actual_end_date": {
          "type": "string",
          "format": "date",
          "description": "Actual task completion date"
        }
      },
      "additionalProperties": false,
      "minProperties": 1
    },
    "ErrorResponse": {
      "type": "object",
      "properties": {
        "error": {
          "type": "string",
          "description": "Error message"
        },
        "code": {
          "type": "string",
          "description": "Error code"
        },
        "details": {
          "type": "object",
          "description": "Additional error details"
        }
      },
      "required": ["error"],
      "additionalProperties": false
    }
  }
}
