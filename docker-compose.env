# ===========================================
# ConstrSW - Environment Configuration
# ===========================================
# Copy this file to .env and adjust the values as needed

# ===========================================
# Keycloak Configuration
# ===========================================
KC_HEALTH_ENABLED=true
KC_METRICS_ENABLED=true
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin123
KEYCLOAK_REALM=constrsw
KEYCLOAK_CLIENT_ID=constrsw-frontend
KEYCLOAK_CLIENT_SECRET=your-client-secret-here
KEYCLOAK_GRANT_TYPE=authorization_code

# Keycloak Network Configuration
KEYCLOAK_INTERNAL_PROTOCOL=http
KEYCLOAK_INTERNAL_HOST=keycloak
KEYCLOAK_INTERNAL_API_PORT=8080
KEYCLOAK_INTERNAL_CONSOLE_PORT=8080
KEYCLOAK_EXTERNAL_CONSOLE_PORT=8080

# ===========================================
# PostgreSQL Configuration
# ===========================================
POSTGRESQL_HOST_AUTH_METHOD=trust
POSTGRESQL_DATA=/var/lib/postgresql/data
POSTGRESQL_USERNAME=postgres
POSTGRESQL_PASSWORD=postgres123
POSTGRESQL_DB=constrsw
POSTGRESQL_INTERNAL_HOST=postgresql
POSTGRESQL_INTERNAL_PORT=5432
POSTGRESQL_EXTERNAL_PORT=5432

# ===========================================
# SonarQube Configuration
# ===========================================
SONAR_WEB_HOST=0.0.0.0
SONAR_WEB_PORT=9000
SONAR_WEB_CONTEXT=/
SONARQUBE_USER=admin
SONARQUBE_PASSWORD=admin123
SONARQUBE_INTERNAL_PROTOCOL=http
SONARQUBE_INTERNAL_HOST=sonarqube
SONARQUBE_INTERNAL_PORT=9000

# ===========================================
# Frontend Configuration
# ===========================================
VITE_API_URL=http://localhost:3000
VITE_KEYCLOAK_URL=http://localhost:8080
VITE_KEYCLOAK_REALM=constrsw
VITE_KEYCLOAK_CLIENT_ID=constrsw-frontend
FRONTEND_EXTERNAL_PORT=3001
FRONTEND_INTERNAL_PORT=80
